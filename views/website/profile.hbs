<h1>Profile</h1>

<h3>Welcome, {{user.username}}! </h3>
<p>Age: {{user.age}}</p>
<p>Discord: {{user.discord}}</p>
<p>Location: {{user.location}}</p>

{{#if user.gamesWant}}
<p>Favorite games:</p>
  {{#each user.gamesWant}}
    <p><a href=`/recommendations/search/{{id}}`>{{name}}</a></p>
    <form action="/profile/delete/mongo/{{_id}}" method="post">
      <button type="submit">Delete</button>
    </form>
  {{/each}}
{{/if}}

{{#if axiosGames}}
  {{#each axiosGames}}
    <p><a href=`/recommendations/search/{{id}}`>{{name}}</a></p>
    <form action="/profile/delete/{{id}}" method="post">
      <button type="submit">Delete</button>
    </form>
  {{/each}}
{{/if}}

{{#if user.followings}}
<p>Friends: </p>
{{#each user.followings}}
  <p>Username: {{username}} Discord: {{discord}}</p>
  <form action="/connections/delete/{{_id}}" method="post">
    <button type="submit">Delete</button>
  </form>
{{/each}}
{{else}}
<p>You have no friends yet :(</p>
{{/if}}



